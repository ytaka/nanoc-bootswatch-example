!!!
%html
  %head
    %title Bootswatch: United
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:charset => "utf-8"}/
    %link{ :rel => "stylesheet", :type => "text/css", :href => stylesheet_path("application"), :media => "screen" }
    %script{ :type => "text/javascript", :src => javascript_path('application') }
  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %a.navbar-brand{:href => "../"} Bootswatch
          %button.navbar-toggle{"data-target" => "#navbar-main", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        #navbar-main.navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li.dropdown
              %a#themes.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Themes
                %span.caret
              %ul.dropdown-menu{"aria-labelledby" => "themes"}
                %li
                  %a{:href => "../default/", :tabindex => "-1"} Default
                %li.divider
                %li
                  %a{:href => "../amelia/", :tabindex => "-1"} Amelia
                %li
                  %a{:href => "../cerulean/", :tabindex => "-1"} Cerulean
                %li
                  %a{:href => "../cosmo/", :tabindex => "-1"} Cosmo
                %li
                  %a{:href => "../cyborg/", :tabindex => "-1"} Cyborg
                %li
                  %a{:href => "../flatly/", :tabindex => "-1"} Flatly
                %li
                  %a{:href => "../journal/", :tabindex => "-1"} Journal
                %li
                  %a{:href => "../readable/", :tabindex => "-1"} Readable
                %li
                  %a{:href => "../simplex/", :tabindex => "-1"} Simplex
                %li
                  %a{:href => "../slate/", :tabindex => "-1"} Slate
                %li
                  %a{:href => "../spacelab/", :tabindex => "-1"} Spacelab
                %li
                  %a{:href => "../united/", :tabindex => "-1"} United
            %li
              %a{:href => "../help/"} Help
            %li
              %a{:href => "http://news.bootswatch.com"} Blog
            %li.dropdown
              %a#download.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Download
                %span.caret
              %ul.dropdown-menu{"aria-labelledby" => "download"}
                %li
                  %a{:href => "./bootstrap.min.css", :tabindex => "-1"} bootstrap.min.css
                %li
                  %a{:href => "./bootstrap.css", :tabindex => "-1"} bootstrap.css
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "http://builtwithbootstrap.com/", :target => "_blank"} Built With Bootstrap
            %li
              %a{:href => "https://wrapbootstrap.com/?ref=bsw", :target => "_blank"} WrapBootstrap
    .container
      = yield
