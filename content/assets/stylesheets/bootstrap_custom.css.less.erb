@import "stylesheets/bootstrap/less/bootstrap.less";

<% file_dir = File.expand_path(File.dirname(__FILE__)) %>
<% bootswatch_variables_less = "#{Nanoc::Site.new('.').config[:bootswatch][:theme]}/variables.less" %>
<% path_variable_less = File.join(file_dir, "stylesheets/bootswatch", bootswatch_variables_less) %>
<% if File.exist?(path_variable_less) %>
@import "<%= File.join("stylesheets/bootswatch", bootswatch_variables_less) %>";
<% end %>

@import "stylesheets/bootswatch/assets/less/bootswatch.less";

<% Dir.glob(File.join(file_dir, "bootstrap_custom/**/*.less")).each do |path| %>
@import "<%= File.join("stylesheets", path.sub(/^#{file_dir}/, "")) %>";
<% end %>
